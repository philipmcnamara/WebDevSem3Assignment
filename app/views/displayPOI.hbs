<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
    {{> title-card title="Find us...On the Wild Athlantic Way" subTitle="POI Details"}}
</div>
</div>
<nav class="uk-navbar-container" uk-navbar="dropbar: true; dropbar-mode: push">...</nav>
<div class="uk-navbar-dropbar">
    {{> navigation }}
</div>

<div class="uk-container uk-margin">
    <div class="uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center" uk-grid>
        <div class="uk-width-auto@m">
            {{>descriptionDisplay}}
        </div>
        <div class="uk-width-auto@m">
            <img width="300" src="images/settings.png">
        </div>
        <div class="uk-width-expand@m">
            <div class="uk-card uk-card-default uk-width-xlarge uk-card-body uk-box-shadow-large">
                <h3 class="uk-card-title uk-text-center">Update Poi: </h3>
                {{>POIdisplay}}
            </div>
        </div>
        <div class="uk-width-expand@m">
            <div class="uk-card uk-card-default uk-width-xxxlarge uk-card-body uk-box-shadow-large">
                <h3 class="uk-card-title uk-text-center">Add Review: </h3>
                {{>review}}
            </div>
        </div>
        <div class="uk-width-expand@m">
            <div class="uk-card uk-card-default uk-width-xxxlarge uk-card-body uk-box-shadow-large">
                <h3 class="uk-card-title uk-text-center">Reviews </h3>
                {{>reviewDisplay}}
            </div>
        </div>
        <div class="uk-width-expand@m">
            <div class="uk-card uk-card-default uk-width-xxxlarge uk-card-body uk-box-shadow-large">
                {{>reviewList}}
            </div>
        </div>
    </div>
</div>
